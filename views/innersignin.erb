        <div class="inner-signin-container">
            <% flash.keys.each do |type|%>
            <div class="alert alert-<%=type%>">
                <%= flash[type]%>
            </div>
             <% end%>
            <div class="insign-whitecard-container">
                <div class="insign-header-container">
                    <div class="insign-header-innercontainer">
                        <svg 
                        class="insign-xsvgbutton"
                        viewBox="0 0 24 24" 
                        aria-hidden="true" 
                        class="r-18jsvk2 r-4qtqp9 r-yyyyoo r-z80fyv r-dnmrzs r-bnwqim r-1plcrui r-lrvibr r-19wmn03">
                        <g><path d="M13.414 12l5.793-5.793c.39-.39.39-1.023 0-1.414s-1.023-.39-1.414 0L12 10.586 6.207 4.793c-.39-.39-1.023-.39-1.414 0s-.39 1.023 0 1.414L10.586 12l-5.793 5.793c-.39.39-.39 1.023 0 1.414.195.195.45.293.707.293s.512-.098.707-.293L12 13.414l5.793 5.793c.195.195.45.293.707.293s.512-.098.707-.293c.39-.39.39-1.023 0-1.414L13.414 12z">
                        </path>
                        </g></svg>
                        <img class="insign-twitterlogo" src="twitterlogo.png" />
                    </div>
                </div>
                <div class="insign-maincontent-row">
                    <span class="insign-label-container">Sign in to Twitter</span>
                </div>
                <form>
                </form>
                <div class="insign-maincontent-row insign-inputrow">
                    <label class="insign-input-label">
                        <span class="insign-input-label-text">email, or username</span>
                    </label>
                    <input class="insign-textinput">
                </div>
                <div class="insign-maincontent-row insign-inputrow">
                    <%# <label class="insign-input-label">
                        <span class="insign-input-label-text insign-passwordlabel">password</span>
                    </label> %>
                    <input type="password" placeholder="password" class="insign-textinput">
                </div>
                <div class="insign-maincontent-row insign-inputrow">
                    <button class="insign-nextbutton">Sign in</button>
                </div>
            </div>
        </div>
    </body>
    <script src="/js/script.js"></script>
